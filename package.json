{
  "name": "eidolon-server-ts",
  "version": "0.1.0",
  "description": "[![GitHub version](https://badge.fury.io/gh/abrisene%2Feidolon-server-ts.svg)](https://badge.fury.io/gh/abrisene%2Feidolon-server-ts)",
  "main": "lib/index.js",
  "author": "David Robinson <dr@monetise.io> (http://www.monetise.io)",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node scripts/start.js",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect scripts/start.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "chalk": "2.4.2",
    "dotenv": "7.0.0",
    "express": "4.16.4"
  },
  "devDependencies": {
    "@types/dotenv": "6.1.1",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "concurrently": "4.1.0",
    "jest": "24.7.1",
    "nodemon": "1.18.10",
    "tslint": "5.15.0",
    "tslint-config-airbnb": "5.11.1",
    "typescript": "3.4.2"
  }
}
